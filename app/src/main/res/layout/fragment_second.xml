<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.intro.SecondFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.46"
        app:layout_constraintVertical_bias="0"
        android:background="@color/pink"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/splashgrp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.40"
        app:layout_constraintBottom_toBottomOf="@+id/topContainer"
        app:layout_constraintEnd_toEndOf="@+id/topContainer"
        app:layout_constraintStart_toStartOf="@+id/topContainer"
        app:layout_constraintTop_toTopOf="@+id/topContainer" />


    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="34sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintWidth_percent=".75"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="@id/topContainer"
        app:layout_constraintEnd_toEndOf="@id/topContainer"
        app:layout_constraintTop_toBottomOf="@id/topContainer"
        android:text=" Best Markitplac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        app:layout_constraintVertical_bias="0"
        android:lineHeight="28sp"
        android:text="O On-Time Departures. Pay just for your seat. No Refusal from our end. Spacious &amp;
 Comfortable Seating. Female passengers safety standards. Onboard Refreshments. Cab Tracking through Maps"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/startBtn"
        app:layout_constraintEnd_toEndOf="@id/topContainer"
        app:layout_constraintStart_toStartOf="@id/topContainer"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintWidth_percent=".9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startBtn"
        android:padding="20dp"
        android:elevation="0dp"
        android:text="Get Started"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>